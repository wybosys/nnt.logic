{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "outDir": "bin",
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts"
  ]
}
